XLEN ?= 64

TARGET ?= riscv$(XLEN)-unknown-elf
CC := $(TARGET)-gcc
LD := $(CC)

OBJDUMP ?= \
	$(TARGET)objdump \
	--disassemble-all \
	--disassemble-zeroes \
	--section=.text \
	--section=.text.startup \
	--section=.text.init \
	--section=.data

LDFLAGS := $(LDFLAGS) \
	-L$(abs_top_srcdir)/libs/build/$(TARGET)

ENV_P = $(abs_top_srcdir)/../../riscv-tools/riscv-tests/env/p
ENV_V = $(abs_top_srcdir)/../../riscv-tools/riscv-tests/env/v
